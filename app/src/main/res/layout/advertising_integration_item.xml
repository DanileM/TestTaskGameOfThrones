<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_interlocutor"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_sponsored"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:text="@string/sponsored"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/tv_advertising_integration"
                android:layout_centerInParent="true"
                android:layout_below="@+id/tv_sponsored"
                android:text="Watch this cool gms ad!"
                android:textSize="15sp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b_show_reward"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_advertising_integration"
                android:text="@string/show_reward"
                android:layout_marginTop="5dp"
                android:onClick="startVideoAdd"
                android:textSize="12sp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>